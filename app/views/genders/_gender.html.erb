<div id="<%= dom_id gender %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= gender.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this gender", gender, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this gender', edit_gender_path(gender), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
