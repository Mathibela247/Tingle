<div id="<%= dom_id organization_unit %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= organization_unit.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Organization type:</strong>
    <%= organization_unit.organization_type.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= organization_unit.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this organization unit", organization_unit, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this organization unit', edit_organization_unit_path(organization_unit), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
